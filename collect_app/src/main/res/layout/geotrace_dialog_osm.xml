<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

  <RadioGroup android:id="@+id/trace_osm_radio_group"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <RadioButton android:id="@+id/trace_osm_manual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:onClick="setGeoTraceMode"
        android:text="@string/manual_mode" />

    <RadioButton android:id="@+id/trace_osm_auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:onClick="setGeoTraceMode"
        android:checked="true"
        android:text="@string/automatic_mode" />

    </RadioGroup>

  <LinearLayout android:id="@+id/trace_osm_auto_options"
                  android:orientation="vertical"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">
      <LinearLayout android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="42dp"
            android:text="@string/recording_interval" />
        <Spinner
            android:id="@+id/trace_osm_auto_interval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/interval_labels" />
      </LinearLayout>

    <LinearLayout android:orientation="horizontal"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingLeft="42dp"
          android:text="@string/required_accuracy" />
      <Spinner
          android:id="@+id/trace_osm_auto_accuracy"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:entries="@array/accuracy_labels" />
    </LinearLayout>

  </LinearLayout>

</LinearLayout>
