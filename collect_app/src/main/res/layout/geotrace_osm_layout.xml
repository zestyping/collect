<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#BF000000"
    >

  <TextView
      android:id="@+id/geotrace_location_status"
      android:text="@string/geotrace_location_status_searching"
      android:textColor="#FFFFFF"
      android:layout_width="match_parent"
      android:gravity="start|center_vertical"
      android:layout_height="wrap_content"
      android:paddingTop="5dip"
      android:paddingLeft="5dip"
      android:paddingRight="5dip"
      android:paddingBottom="5dip"
      />

  <org.osmdroid.views.MapView
      android:id="@+id/geotrace_mapview"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="28dip"
      android:layout_marginBottom="28dip"
      />

  <Button
      android:text="@string/record_geopoint"
      android:id="@+id/manual_button"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="15dp"
      android:visibility="gone"
      android:textStyle="bold"
      android:layout_marginTop="8dp"
      android:layout_marginLeft="5dp"
      android:layout_marginStart="5dp"
      android:paddingBottom="20dp"
      android:drawableRight="@drawable/distance"
      android:drawableEnd="@drawable/distance"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_toLeftOf="@+id/scroller"
      android:layout_toStartOf="@+id/scroller"
      android:layout_below="@+id/geotrace_location_status" />

  <ScrollView
      android:id="@+id/scroller"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_alignParentEnd="true"
      android:layout_below="@+id/geotrace_location_status">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:paddingTop="0dip"
        android:paddingBottom="60dip">

        <ImageButton
            android:id="@+id/show_location"
            android:padding="15dp"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_my_location_selector" />

        <ImageButton
            android:id="@+id/play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_add_location_selector" />

        <ImageButton
            android:id="@+id/pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_margin="5dp"
            android:visibility="gone"
            android:src="@drawable/ic_pause_black_36dp" />

        <ImageButton
            android:id="@+id/backspace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_backspace_arrow_selector" />

        <ImageButton
            android:id="@+id/layers"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_layers_black_36dp" />

        <ImageButton
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_delete_selector" />

        <ImageButton
            android:id="@+id/geotrace_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_save_black_36dp" />

    </LinearLayout>
  </ScrollView>

  <TextView
      android:id="@+id/geotrace_collection_status"
      android:text=""
      android:textColor="#FFFFFF"
      android:layout_width="match_parent"
      android:gravity="start|center_vertical"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:paddingTop="5dip"
      android:paddingLeft="5dip"
      android:paddingRight="5dip"
      android:paddingBottom="5dip"
      />

</RelativeLayout>
